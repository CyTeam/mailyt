!!! 5
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => "Simon Huerlimann &lt;simon.huerlimann@cyt.ch&gt;", :name => "author"}/

    %link{:rel => "shortcut icon", :href => image_path('favicon.ico')}/

    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
      
    = javascript_include_tag :defaults
    = csrf_meta_tag
    %title
      = "Mailyt - #{controller.action_name.capitalize}"
  %body
    #container
      #header
        #logo{:style => 'margin: 0px'}
          = image_tag('logo.png')
          %h1#logo-text mail<span id="logo-yt">yt</span>
        #main-menu
          = render_navigation(:level => 1)

      #content-column
        #content
          - if notice
            #notice.flash.notice= notice
          - if alert
            #alert.flash.alert= alert
          = yield

      #sidebar-column
        #sidebar
          = yield :sidebar
